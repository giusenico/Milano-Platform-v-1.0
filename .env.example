# ============================================================================
# Milano Platform - Environment Configuration
# ============================================================================
# Copy this file to .env and customize as needed
# ============================================================================

# Database
# --------
# Path to the unified database (single source of truth)
DB_PATH=./db/milano_unified.db

# Data directories
DATA_DIR=./data_pipeline/data_raw
LOGS_DIR=./logs
REPORTS_DIR=./reports

# External dependencies (optional)
# --------------------------------
# Set to "true" to enable, "false" to disable
# When disabled, pipeline will skip these steps without failing
# When enabled but missing, pipeline will fail with clear error

# Sync to Website_Milano external project
ENABLE_WEBSITE_SYNC=false
WEBSITE_MILANO_PATH=../Website_Milano

# Import from Api_Milano_Analisi
ENABLE_EXTERNAL_IMPORT=false
API_MILANO_ANALISI_PATH=../Api_Milano_Analisi

# Server configuration
# --------------------
PORT=3001
NODE_ENV=development

# Scheduling
# ----------
# Schedule for automatic updates (cron expression)
# Default: daily at 03:00 Europe/Rome
SCHEDULE_HOUR=3
SCHEDULE_MINUTE=0
SCHEDULE_TZ=Europe/Rome

# Pipeline options
# ----------------
# Set to "true" to enable verbose logging
VERBOSE=false

# Set to "true" to skip download and use existing data
SKIP_DOWNLOAD=false

# Set to "true" to force re-download of all datasets
FORCE_DOWNLOAD=false
